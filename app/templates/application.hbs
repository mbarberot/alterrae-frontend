<div>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {{#link-to "index" classNames="navbar-brand"}}Sistearth{{/link-to}}
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    {{#view "nav-view"}}{{#link-to "posts"}}Actualités{{/link-to}}{{/view}}
                    <li><a href="http://royaumes.sistearth.com" target="_blank">Forum</a></li>
                    <li><a href="http://guide.sistearth.com" target="_blank">Wiki</a></li>
                    
                </ul>
                
                <div class="navbar-form navbar-right">
                    {{#if session.isAuthenticated}}
                        <a {{action 'invalidateSession'}} class="btn btn-primary">Déconnexion</a>
                    {{else}}
                        <form role="form" {{action 'authenticate' on='submit'}}>
                            <div class="form-inline">
                                {{input type='text' classNames='form-control' placeholder='Identifiant' value=identification id='identification'}}
                                {{input type='password' classNames='form-control' placeholder='Mot de passe' value=password id='password'}}
                                <button type="submit" class="btn btn-primary">Connexion</button>
                            </div>
                        </form>
                    {{/if}}
                </div>
                
                <ul class="nav navbar-nav pull-right">
                   {{#if session.isAuthenticated}}
                        {{#view "nav-view"}}{{#link-to "game"}}Jeu{{/link-to}}{{/view}}
                        <!--                            {{#view "nav-view"}}{{#link-to "account"}}Compte{{/link-to}}{{/view}} TODO -->
                    {{else}}
<!--
                        {{#view "nav-view"}}{{#link-to "login"}}Connexion{{/link-to}}{{/view}}
                        {{#view "nav-view"}}{{#link-to "register"}}Inscription{{/link-to}}{{/view}}
-->
                    {{/if}}
                </ul> 
            </div>
            <!--/.nav-collapse -->
        </div>
        <!--/.navbar -->
    </div>

    {{outlet}}
    
    <div class="footer">
        <div class="container-fluid">
            
                <p id="copyright" class="text-center">&copy; Sistearth.com - Tous droits réservés. Reproduction interdite sans autorisation.</p>
            
        </div>
    </div>
    

</div>

