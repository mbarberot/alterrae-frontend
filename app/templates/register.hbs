<div class="container">
    <div class="row">
        <div id="index" class="main">
            <h1 class="page-header">Inscription</h1>
            <form role="form" class="form-horizontal col-md-12" {{action 'register' on='submit' }}>
                <div {{bind-attr class=":form-group errors.username:has-error" }}>
                    <label for "username" class="col-sm-2 control-label">Identifant</label>
                    <div class="col-sm-6">
                        {{input type='text' classNames='form-control' id='username' placeholder='Identifiant' value=username}}
                    </div>
                    <div class="col-sm-4">
                        {{#if errors.username }}
                        <p class="text-danger">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            {{errors.username}}
                        </p>
                        {{/if}}
                    </div>
                </div>
                <hr/>

                <div {{bind-attr class=":form-group errors.password:has-error" }}>
                    <label for="password" class="col-sm-2 control-label">Mot de passe</label>
                    <div class="col-sm-6">
                        {{input type='password' classNames='form-control' id='password' placeholder='Mot de passe' value=password}}
                    </div>
                    <div class="col-sm-4">
                        {{#if errors.password}}
                        <p class="text-danger">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            {{errors.password}}
                        </p>
                        {{/if}}
                    </div>
                </div>
                <div {{bind-attr class=":form-group errors.passwordConfirmation:has-error" }}>
                    <label for="password-confirmation" class="col-sm-2 control-label">Confirmation</label>
                    <div class="col-sm-6">
                        {{input type='password' classNames='form-control' id='password-confirmation' placeholder='Confirmation du mot de passe' value=passwordConfirmation}}
                    </div>
                    <div class="col-sm-4">
                        {{#if errors.passwordConfirmation}}
                        <p class="text-danger">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            {{errors.passwordConfirmation}}
                        </p>
                        {{/if}}
                    </div>
                </div>
                <hr/>
                <div {{bind-attr class=":form-group errors.email:has-error" }}>
                    <label for="email" class="col-sm-2 control-label">E-mail</label>
                    <div class="col-sm-6">
                        {{input type='email' classNames='form-control' id='email' placeholder='email@example.com' value=email}}
                    </div>
                    <div class="col-sm-4">
                        {{#if errors.email}}
                        <p class="text-danger">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            {{errors.email}}
                        </p>
                        {{/if}}
                    </div>

                </div>
                <div {{bind-attr class=":form-group errors.emailConfirmation:has-error" }}>
                    <label for="email-confirmation" class="col-sm-2 control-label">Confirmation</label>
                    <div class="col-sm-6">
                        {{input type='email' classNames='form-control' id='email-confirmation' placeholder='email@example.com' value=emailConfirmation}}
                    </div>
                    <div class="col-sm-4">
                        {{#if errors.emailConfirmation}}
                        <p class="text-danger">
                            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                            {{errors.emailConfirmation}}
                        </p>
                        {{/if}}
                    </div>
                </div>
                <hr/>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-4">
                        <button type="submit" class="btn btn-default col-sm-4" {{bindAttr disabled="isInvalid" }}>Valider</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>