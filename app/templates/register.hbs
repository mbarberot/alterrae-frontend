<div class="row">
  <h1 class="page-header">Inscription</h1>

  <form role="form" class="form-horizontal col-md-12" {{action 'register' on='submit' }}>
    {{#if controller.errorMessage}}
      <div class="alert alert-danger">
        <p>
          {{controller.errorMessage}}
        </p>
      </div>
    {{/if}}
    {{#auto-validated-input label="Identifiant" errors=controller.errors.username}}
      {{input type='text' classNames='form-control' id='username' placeholder='Identifiant' value=controller.username}}
    {{/auto-validated-input}}

    <hr/>

    {{#auto-validated-input label="Mot de passe" errors=controller.errors.password}}
      {{input type='password' classNames='form-control' id='password' placeholder='Mot de passe' value=controller.password}}
    {{/auto-validated-input}}

    {{#auto-validated-input label="Confirmation" errors=controller.errors.passwordConfirmation}}
      {{input type='password' classNames='form-control' id='password-confirmation' placeholder='Confirmation du mot de passe' value=controller.passwordConfirmation}}
    {{/auto-validated-input}}

    <hr/>

    {{#auto-validated-input label="E-mail" errors=controller.errors.email}}
      {{input type='email' classNames='form-control' id='email' placeholder='email@example.com' value=controller.email}}
    {{/auto-validated-input}}

    {{#auto-validated-input label="Confirmation" errors=controller.errors.emailConfirmation}}
      {{input type='email' classNames='form-control' id='email-confirmation' placeholder='email@example.com' value=controller.emailConfirmation}}
    {{/auto-validated-input}}

    <hr/>
    <div class="form-group">
      <div class="col-sm-8 col-sm-offset-4">
        <button id="submit" type="submit" class="btn btn-primary col-sm-4" {{bind-attr disabled="controller.isInvalid"}}>Valider
        </button>
      </div>
    </div>
  </form>
</div>
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Inscription r√©ussie !</h4>
      </div>
      <div class="modal-body">
        {{#link-to 'login' class="btn btn-default" data-dismiss="modal" }}Fermer{{/link-to}}
      </div>
    </div>
  </div>
</div>
