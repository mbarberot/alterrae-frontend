<div class="container">
    <div class="row">
        <div id="index" class="main">
            <h1 class="page-header">Bienvenue sur Sistearth !</h1>
            <div id="posts" class="panel-group">
                {{#each post in posts}}
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#posts" {{bind-attr href="accordionHref"}}>
                                    {{post.title}}
                                </a>
                            </h4>
                        </div>
                        <div {{bind-attr id="accordionId"}} class="panel-collapse collapse">
                            <div class="panel-body">
                                <p class="post-metadata text-muted">{{post.formattedDate}}, par {{post.author.username}}.</p>
                                <div class="post-body text-justify">
                                    {{post.text}}
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>