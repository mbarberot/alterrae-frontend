<div class="panel-group" id="posts">
    {{#each itemController="post"}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#posts" {{bind-attr href="accordionHref"}}>
                        {{title}}
                    </a>
                </h4>
            </div>
            <div {{bind-attr id="accordionId"}} class="panel-collapse collapse">
                <div class="panel-body">
                    <p class="post-metadata text-muted">{{formattedDate}}, par {{authorName}}.</p>
                    <div class="post-body text-justify">
                        {{text}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>