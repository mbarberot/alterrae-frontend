<div class="row">

  <h1 class="page-header">
    Supprimer le compte
    <div class="pull-right">
      {{#link-to 'account.index' class="btn btn-default" }}
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        Retour
      {{/link-to}}
    </div>
  </h1>



  <form class="form-horizontal" {{action 'delete' on='submit'}}>
    <div class="col-sm-5 col-sm-offset-3">
      <p class="text-danger">
        <b>
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              Attention : cette action est irr√©versible.
          </b>
      </p>
    </div>

    <div class="col-sm-12">
      {{#auto-validated-input label="Mot de passe actuel" errors=controller.errors.password}}
        {{input type='password' classNames='form-control' id='actual-password' placeholder='mot de passe actuel' value=controller.password}}
      {{/auto-validated-input}}
    </div>

    <div class="col-sm-5 col-sm-offset-3">
      <div class="btn-group col-sm-6 col-sm-offset-3">
        <button id="submit" type="submit" class="btn btn-danger" {{bind-attr disabled="controller.isInvalid"}}>Valider</button>
        {{#link-to 'account' class="btn btn-info" }}Annuler{{/link-to}}
      </div>
    </div>

  </form>
</div>
